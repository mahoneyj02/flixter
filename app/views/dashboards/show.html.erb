<div class="booyah-box col-10 offset-1">
    <h1>Learning</h1>
    <% current_user.enrolled_courses.each do |course| %>
        <h3 class="text-center">
            <%= link_to course.title, courses_path(course) %>
        </h3>
        <br />
        <%= image_tag course.image, class: 'img-fluid' %>
        <br />
        <br />
        <div class="row">
            <div class="col-12 col-sm-8">
                <%= course.description %>
            </div>
            <div class="col-12 col-sm-4 text-center">
                <%= link_to 'More Info', courses_path(course), class: 'btn btn-lg btn-primary' %>
            </div>
        </div>
        <hr class="col-8">
        <br class="clr" />
    <% end %>
    
